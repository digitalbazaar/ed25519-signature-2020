{
  "name": "@digitalbazaar/ed25519-signature-2020",
  "version": "3.0.1-0",
  "description": "Ed25519Signature2020 Linked Data Proof suite for use with jsonld-signatures.",
  "homepage": "https://github.com/digitalbazaar/ed25519-signature-2020",
  "repository": {
    "type": "git",
    "url": "https://github.com/digitalbazaar/ed25519-signature-2020"
  },
  "license": "BSD-3-Clause",
  "type": "module",
  "exports": "./lib/index.js",
  "browser": {
    "buffer": false,
    "crypto": false,
    "util": false
  },
  "files": [
    "lib/*.js"
  ],
  "dependencies": {
    "@digitalbazaar/ed25519-verification-key-2020": "^4.0.0",
    "base58-universal": "^2.0.0",
    "ed25519-signature-2020-context": "^1.1.0",
    "ed25519-signature-2018-context": "^1.1.0",
    "jsonld-signatures": "^9.3.1"
  },
  "devDependencies": {
    "@digitalbazaar/ed25519-verification-key-2018": "^4.0.0",
    "@digitalbazaar/security-document-loader": "^2.0.0",
    "c8": "^7.11.2",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.14.0",
    "eslint-config-digitalbazaar": "^3.0.0",
    "eslint-plugin-jsdoc": "^39.2.9",
    "eslint-plugin-unicorn": "^42.0.0",
    "karma": "^6.3.19",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^5.0.0",
    "mocha": "^9.2.2",
    "mocha-lcov-reporter": "^1.3.0",
    "webpack": "^5.72.0"
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "test": "npm run lint && npm run test-node && npm run test-karma",
    "test-karma": "karma start karma.conf.cjs",
    "test-node": "cross-env NODE_ENV=test mocha -r esm --preserve-symlinks -t 30000 -A -R ${REPORTER:-spec} --require test/test-mocha.js test/*.spec.js",
    "coverage": "cross-env NODE_ENV=test c8 --reporter=lcov --reporter=text-summary npm run test-node",
    "coverage-ci": "cross-env NODE_ENV=test c8 --reporter=lcovonly --reporter=text npm run test-node",
    "coverage-report": "c8 report",
    "lint": "eslint ."
  },
  "c8": {
    "exclude": [
      "test"
    ],
    "reporter": [
      "html",
      "text-summary"
    ]
  }
}
